<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_zero"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="invisible">

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp">
                <ImageView
                    android:id="@+id/image_zero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_donkey"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"/>

                <ImageView
                    android:id="@+id/image_zero_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:scaleType="fitEnd"
                    android:background="@android:color/transparent" />
            </FrameLayout>


            <TextView
                android:id="@+id/image_zero_name"
                android:gravity="center"
                android:text="DOG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>




        <LinearLayout
            android:id="@+id/layout_one"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="invisible">

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp">
                <ImageView
                    android:id="@+id/image_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_donkey"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"/>

                <ImageView
                    android:id="@+id/image_one_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:scaleType="fitEnd"
                    android:background="@android:color/transparent" />
            </FrameLayout>


            <TextView
                android:id="@+id/image_one_name"
                android:gravity="center"
                android:text="DOG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/next_word"
        android:text="Next word"
        android:layout_width="60dp"
        android:alpha="0.7"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:background="@drawable/button"
        android:layout_height="match_parent" />
</RelativeLayout>



